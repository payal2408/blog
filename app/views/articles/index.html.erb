<div class="container ">
<p id="notice"><%= notice %></p>
<%= search_form_for @q do |f| %>
<div class="row">
<div class="col-md-6 form-group">
 <%= f.search_field :name_cont, class: "form-control", placeholder: "Search" %>
</div>
<div class="col-md-3">
 <%= f.submit class: "btn bg-primary" %>
</div>
</div>
<% end %>
<div class="row row-cols-1 row-cols-md-3">
  <% @articles.each do |article| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow p-2">
          <%= image_tag url_for(article.image), class: 'card-img-top size' %>
          <div class="card-body">
            Writer: <%= article.name %><br>
             <%= link_to 'Show', article, class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-primary btn-sm"  %>
              <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %>
      
          </div>
        </div>
      </div>
  <% end %>

</div>
<%= paginate @articles %>

  </div>